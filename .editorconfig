# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false

[*.jade]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false
